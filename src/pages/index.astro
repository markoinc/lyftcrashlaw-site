---
import BaseLayout from '../layouts/BaseLayout.astro';
import LeadForm from '../components/LeadForm.astro';
import { states, getOneYearSOLStates, getContributoryNegligenceStates } from '../data/states';
import { getTopMarkets } from '../data/cities';

const topMarkets = getTopMarkets(10);
const urgentStates = getOneYearSOLStates();

const schema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Lyft Crash Law",
  "url": "https://lyftcrashlaw.com",
  "description": "Find experienced Lyft accident lawyers nationwide. Free case evaluation for Lyft injury claims.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://lyftcrashlaw.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<BaseLayout 
  title="Lyft Accident Lawyers Near You" 
  description="Injured in a Lyft accident? Find experienced Lyft crash lawyers near you. Free case evaluation. No fees unless you win."
  schema={schema}
>
  <!-- Hero Section -->
