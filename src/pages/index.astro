  </section>

  <!-- Find by State -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Find Lyft Accident Lawyers by State</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3">
        {states.map(state => (
          <a href={`/states/${state.slug}/`} class="bg-white p-3 rounded-lg shadow hover:shadow-md hover:bg-secondary hover:text-white transition text-center">
            <span class="font-medium">{state.abbr}</span>
          </a>
        ))}
      </div>
      
      <div class="mt-8 text-center">
        <a href="/states/" class="text-secondary font-semibold hover:underline">
          Browse all states with detailed laws ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- Common Accident Scenarios -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Common Lyft Accident Scenarios</h2>
      <p class="text-gray-600 text-center mb-12">We handle all types of Lyft accident claims</p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/case-types/lyft-passenger-accident/" class="bg-gray-50 p-6 rounded-xl hover:shadow-lg transition">
          <div class="text-3xl mb-3">üöï</div>
          <h3 class="font-bold mb-2">Passenger Injuries</h3>
          <p class="text-gray-600 text-sm">Injured while riding in a Lyft vehicle</p>
        </a>
        
        <a href="/case-types/pedestrian-hit-by-lyft/" class="bg-gray-50 p-6 rounded-xl hover:shadow-lg transition">
          <div class="text-3xl mb-3">üö∂</div>
